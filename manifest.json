{
  "manifest_version": 3,
  "name": "Zetsu Chai",
  "description": "Your command line for living.",
  "version": "1.0.0",
  "icons": {
    "16": "public/icons/logo16.png",
    "32": "public/icons/logo32.png",
    "48": "public/icons/logo48.png",
    "128": "public/icons/logo128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "public/icons/logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["src/app.js"]
    }
  ]
}
